<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/gradient_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post your Ad"
            android:textAlignment="center"
            android:textSize="@dimen/text1_size"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/bottom"
            android:layout_height="@dimen/text_height"
            android:background="@color/white"
            android:id="@+id/post_name"
            android:hint="Name"
            android:paddingLeft="10dp"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/bottom"
            android:layout_height="@dimen/text_height"
            android:background="@color/white"
            android:id="@+id/post_type"
            android:hint="Type"
            android:paddingLeft="10dp"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/bottom"
            android:layout_height="@dimen/text_height"
            android:background="@color/white"
            android:id="@+id/post_price"
            android:hint="Price"
            android:paddingLeft="10dp"
            android:textColor="@color/black"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/bottom"
            android:layout_height="100dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:background="@color/white"
            android:id="@+id/post_detail"
            android:hint="description of the Ad"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/bottom"
            android:layout_height="@dimen/text_height"
            android:background="@color/white"
            android:id="@+id/post_address"
            android:hint="Address"
            android:paddingLeft="10dp"
            android:textColor="@color/black"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/gradient_button"
            android:id="@+id/ad_post_btn"
            android:layout_gravity="center"
            android:text="add"/>
    </LinearLayout>

</LinearLayout>