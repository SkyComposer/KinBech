<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/gradient_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/handshake"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/shape"
            android:drawableLeft="@drawable/use_white"
            android:hint="Username"
            android:textColorHint="@color/hintGrey"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:id="@+id/log_username"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/pass_white"
            android:hint="@string/p"
            android:background="@drawable/shape"
            android:inputType="textPassword"
            android:id="@+id/log_password"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="12dp"
            android:textColorHint="@color/hintGrey"
            android:layout_marginBottom="5dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:id="@+id/log_button"
            android:textAlignment="center"
            android:background="@drawable/gradient_orange"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_marginBottom="5dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"

        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textColorHint="@color/hintGrey"
            android:text="Haven't got an account yet?"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up here"
            android:textColor="@color/white"

            android:background="@drawable/gradient_orange"
            android:textAllCaps="false"
            android:padding="12dp"
            android:id="@+id/log_to_reg_btn"
            />

    </LinearLayout>
</LinearLayout>